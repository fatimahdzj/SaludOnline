{% extends '::frontend.html.twig' %}
{% block body %}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Centro Salud{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('public/css/materialize.css') }}">
        <link rel="stylesheet" href="{{ asset('public/css/materialize.min.css') }}">
    {% endblock %}
</head>
<body>
<div class="col-lg-3">
    <form class="form-horizontal" role="form" method="post" action="{{path('bd_homepageregistrosa')}}">
        <h2 align="center" class="teal-text text-darken-4">Bienvenido al Registro de Pacientes sin afiliar</h2>
        <div class="container" align="center">
        <div class="row">
        <div class="form-group">
            <label for="usuario"></label>
            <input type="text" class="form-control" id="nomusr" name="nomusr" placeholder="Nombre de Usuario">
        </div>
        <div class="form-group">
            <label for="pass"></label>
            <input type="password" class="form-control" id="pass" name="pass" placeholder="Password">
        </div>
        <div class="form-group">
            <label for="pass"></label>
            <input type="password" class="form-control" id="pass2" name="pass2" placeholder="Repite Password">
        </div>
         <div class="form-group">
            <label for="usuario"></label>
            <input type="text" class="form-control" id="nomcom" name="nomcom" placeholder="Nombre Completo">
        </div>
         <div class="form-group">
            <label for="numafil"></label>
            <input type="text" class="form-control" id="curp" name="curp" placeholder="CURP">
        </div>
         <div class="form-group">
            <label for="numafil"></label>
            <input type="text" class="form-control" id="telefono" name="telefono" placeholder="Teléfono">
        </div>
        <div class="form-group">
            <label for="numafil"></label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Correo Electrónico">
        </div>
        <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Registrar</button>
        </div>
        </div>
        <div class="form-group">
             <a class="clase" href="{{ path('bd_homepagelogin') }}" class="btn btn-default form-control" id="Cancelar">Cancelar</a>
        </div>
        </div>
        </div>
    </form>
</div>
</body>
</html>
{% endblock %}
